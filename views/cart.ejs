<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20 gap-10 bg-primary">
  <div class="w-[30%] rounded-md overflow-hidden">
    <% if (cartItems && cartItems.length > 0) { %> <%
    cartItems.forEach(function(item) { %>
    <div
      class="w-full h-80 bg-[<%= item.bgcolor || '#f3f4f6' %>] flex items-center justify-center"
    >
      <% if(item.image) { %>
      <img
        class="h-[12rem] object-contain"
        src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
        alt="<%= item.name %>"
      />
      <% } else { %>
      <span class="text-gray-500">No Image</span>
      <% } %>
    </div>
    <div class="w-full flex justify-between px-5 py-4 bg-secondary">
      <h3 class="text-2xl"><%= item.name %></h3>
      <div class="flex items-center gap-2">
        <button
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center text-black hover:bg-gray-100"
        >
          <i class="ri-add-line"></i>
        </button>
        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
        <button
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center text-black hover:bg-gray-100"
        >
          <i class="ri-subtract-line"></i>
        </button>
      </div>
    </div>
    <div class="flex items-center justify-between px-5 py-3 bg-tertiary">
      <h4 class="text-lg">Net Total</h4>
      <h2 class="text-lg">₹ <%= item.price %></h2>
    </div>
    <% }) %> <% } else { %>
    <div class="w-full h-80 bg-secondary flex items-center justify-center">
      <h3 class="text-xl">Your cart is empty</h3>
      <p class="mt-2 text-secondary">
        Add some products to your cart to see them here
      </p>
    </div>
    <% } %>
  </div>
  <div class="w-[70%] font-[Open_Sans]">
    <h3 class="text-1.5xl">Price Breakdown</h3>
    <div class="px-20 mt-5">
      <div class="flex gap-5 mt-2">
        <h4 class="w-1/3">Total MRP</h4>
        <h4>
          ₹ <%= cartItems && cartItems.length > 0 ? cartItems.reduce((total,
          item) => total + item.price, 0) : 0 %>
        </h4>
      </div>
      <div class="flex gap-5 mt-2">
        <h4 class="w-1/3">Discount on MRP</h4>
        <h4>₹ 0</h4>
      </div>
      <div class="flex gap-5 mt-2">
        <h4 class="w-1/3">Platform Fee</h4>
        <h4>₹ 20</h4>
      </div>
      <div class="flex gap-5 mt-2">
        <h4 class="w-1/3">Shipping Fee</h4>
        <h4>FREE</h4>
      </div>
    </div>
    <div class="w-full h-[1px] bg-black mt-10"></div>
    <div class="flex gap-10 mt-5">
      <h3 class="w-1/3 text-xl">Total Amount</h3>
      <h3 class="font-semibold text-xl text-green-600">
        ₹ <%= cartItems && cartItems.length > 0 ? (cartItems.reduce((total,
        item) => total + Number(item.price) * (1 - (Number(item.discount) || 0)
        / 100), 0) + 20) : 20 %>
      </h3>
    </div>
    <% if (cartItems && cartItems.length > 0) { %>
    <form action="/checkout" method="post">
      <button
        type="submit"
        class="mt-5 px-6 py-3 accent-bg text-white rounded-full accent-hover"
      >
        Proceed to Checkout
      </button>
    </form>
    <% } else { %>
    <button
      disabled
      class="mt-5 px-6 py-3 bg-gray-400 text-white rounded-full cursor-not-allowed"
    >
      Proceed to Checkout
    </button>
    <% } %>
  </div>
</div>
<%- include('./partials/footer') %>

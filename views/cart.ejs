<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-10 py-16 gap-10">

  <!-- CART ITEMS -->
  <div class="w-[80%] mt-5 px-3 overflow-y-auto max-h-[80vh]">

    <% if (cartItems && cartItems.length > 0) { %>

    <div class="grid grid-cols-4 gap-6">

      <% cartItems.forEach(function(item) { %>

      <!-- CARD -->
      <div class="rounded-lg shadow-lg overflow-hidden">

        <!-- IMAGE -->
        <div class="h-48 flex items-center justify-center">
          <% if (item.image) { %>
          <img
            class="h-36 object-contain"
            src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
            alt="<%= item.name %>" />
          <% } else { %>
          <span class="text-gray-500">No Image</span>
          <% } %>
        </div>

        <!-- NAME + QTY -->
        <div class="flex justify-between items-center px-7 py-3">
          <h3 class="font-semibold text-sm"><%= item.name %></h3>

          <div
            class="flex items-center gap-1 quantity-control"
            data-id="<%= item._id %>"
            data-price="<%= item.price %>"
            data-discount="<%= item.discount || 0 %>">
            <button
              class="minus w-8 h-8 rounded-full flex items-center justify-center hover:bg-gray-600">
              <i class="ri-subtract-line"></i>
            </button>

            <div class="quantity px-2 py-1 rounded">
              <%= item.quantity || 1 %>
            </div>

            <button
              class="plus w-8 h-8 rounded-full flex items-center justify-center hover:bg-gray-600">
              <i class="ri-add-line"></i>
            </button>
          </div>
        </div>

        <!-- PRICE -->
        <div class="flex justify-between items-center px-7 pb-3 text-sm">
          <span>Net Total</span>
          <span class="font-semibold">
            ₹ <%= (item.price * (item.quantity || 1)) -
            ((item.price * (item.quantity || 1) * (item.discount || 0)) / 100)
            %>
          </span>
        </div>

        <div class="flex flex-wrap gap-12 px-7 pb-3">
          <button onclick="removeProduct('<%= item._id %>')"
            class="text-sm hover:text-red-600">
            Delete
          </button>

          <% if (item.discount > 0) { %>
          <p class="text-sm text-green-600"><%= item.discount %>% OFF</p>
          <% } %>
        </div>

      </div>

      <% }) %>

    </div>

    <% } else { %>

    <div class="w-full min-h-screen flex flex-col items-center justify-center">
      <h3 class="text-xl font-semibold">Your cart is empty</h3>
      <p class="mt-2 text-gray-400">Add products to continue</p>
    </div>

    <% } %>
  </div>

  <!-- PRICE BREAKDOWN -->
  <div class="w-[20%] sticky top-28">
    <div class="shadow-md rounded-xl p-6">

      <h3 class="text-lg font-semibold mb-4">Price Breakdown</h3>

      <div class="space-y-3 text-sm">
        <div class="flex justify-between">
          <span>Total MRP</span>
          <span>₹ <span id="totalMrp">0</span></span>
        </div>

        <div class="flex justify-between">
          <span>Discount</span>
          <span class="text-green-500">
            - ₹ <span id="totalDiscount">0</span>
          </span>
        </div>

        <div class="flex justify-between">
          <span>Platform Fee</span>
          <span>₹ 35</span>
        </div>

        <div class="flex justify-between">
          <span>Shipping</span>
          <span class="text-green-500">FREE</span>
        </div>
      </div>

      <div class="h-px bg-gray-300 my-5"></div>

      <div class="flex justify-between text-lg font-semibold">
        <span>Total</span>
        <span class="text-green-600">₹ <span id="totalAmount">35</span></span>
      </div>

      <% if (cartItems.length > 0) { %>
      <form action="address/address" method="post"> <button type="submit"
          class="mt-6 w-full px-6 py-3 bg-blue-500 text-white rounded-full hover:bg-blue-600 transition">
          Place Order </button> </form> <% } else { %> <button
        disabled="disabled"
        class="mt-6 w-full px-6 py-3 bg-gray-400 text-white rounded-full cursor-not-allowed">
        Place Order </button> <% } %> <% if (cartItems && cartItems.length > 0)
      { %> <form action="/checkout" method="post"> <button type="submit"
          class="mt-6 w-full px-6 py-3 bg-blue-500 text-white rounded-full hover:bg-blue-600 transition">
          Proceed to Checkout </button> </form> <% } else { %> <button disabled
        class="mt-6 w-full px-6 py-3 bg-gray-400 text-white rounded-full cursor-not-allowed">
        Proceed to Checkout </button>
      <% } %>

    </div>
  </div>

</div>

<%- include('./partials/footer') %>

<!-- ================= JS ================= -->
<script>
  const platformFee = 35;

  const totalMrpEl = document.getElementById("totalMrp");
  const totalDiscountEl = document.getElementById("totalDiscount");
  const totalAmountEl = document.getElementById("totalAmount");

  function updateTotals() {
    let totalMrp = 0;
    let totalDiscount = 0;

    document.querySelectorAll(".quantity-control").forEach(control => {
      const price = Number(control.dataset.price);
      const discount = Number(control.dataset.discount);
      const qty = Number(control.querySelector(".quantity").textContent);

      const mrp = price * qty;
      const dis = (mrp * discount) / 100;

      totalMrp += mrp;
      totalDiscount += dis;
    });

    totalMrpEl.textContent = totalMrp.toFixed(0);
    totalDiscountEl.textContent = totalDiscount.toFixed(0);
    totalAmountEl.textContent =
      (totalMrp - totalDiscount + platformFee).toFixed(0);
  }

  document.querySelectorAll(".quantity-control").forEach(control => {
    const quantityEl = control.querySelector(".quantity");
    const plus = control.querySelector(".plus");
    const minus = control.querySelector(".minus");
    const productId = control.dataset.id;

    let quantity = Number(quantityEl.textContent);

    plus.onclick = async () => {
      quantity++;
      quantityEl.textContent = quantity;

      await fetch("/users/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, quantity })
      });

      updateTotals();
    };

    minus.onclick = async () => {
      if (quantity <= 1) return;

      quantity--;
      quantityEl.textContent = quantity;

      await fetch("/users/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, quantity })
      });

      updateTotals();
    };
  });

  updateTotals();
</script>

<script>
  function removeProduct(productId) {
    if (!confirm("Delete this product?")) return;

    fetch(`/users/delete/${productId}`, { method: "DELETE" })
      .then(() => location.reload());
  }
</script>

<%- include('./partials/header') %>
<div class="py-16 shadow px-20"  >
    <div class="py-5 ">
        <div>
        <h4 class="text-2xl mb-5">create your Address</h4>
      <form autocomplete="off" action="" method="post">
        <div>
        <h2 class="mb-1">Contact Details</h2>
        <div class="relative mb-4">
  <input
    type="text"
    id="name"
    name="name"
    required
    placeholder=" "
    class="peer w-1/3 px-3 py-2 bg-secondary border border-custom rounded-lg text-primary
           focus:outline-none focus:ring-0 focus:border-blue-500"
  />

  <label
    for="name"
    class="absolute left-3 top-2 text-sm text-gray-400 bg-secondary px-1
           transition-all
           peer-placeholder-shown:top-2.5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-gray-500
           peer-focus:-top-2
           peer-focus:text-sm
           peer-focus:text-blue-500">
    Name*
  </label>
</div>
<div class="relative mb-4">
  <input
    type="tel"
    id="number"
    name="number"
    required
    placeholder=" "
    maxlength="10"
    class="peer w-1/3 px-3 py-2 bg-secondary border border-custom rounded-lg text-primary
           focus:outline-none focus:ring-0 focus:border-blue-500"
  />

  <label
    for="number"
    class="absolute left-3 top-2 text-sm text-gray-400 bg-secondary px-1
           transition-all
           peer-placeholder-shown:top-2.5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-gray-500
           peer-focus:-top-2
           peer-focus:text-sm
           peer-focus:text-blue-500">
    Mobile Number*
  </label>
</div>

        </div>

        <h2 class="mb-1">Address</h2>
        <div class="relative mb-4">
  <input
    type="tel"
    id="pincode"
    name="pincode"
    required
    placeholder=" "
    maxlength="6"
    class="peer w-1/3 px-3 py-2 bg-secondary border border-custom rounded-lg text-primary
           focus:outline-none focus:ring-0 focus:border-blue-500"
  />

  <label
    for="pincode"
    class="absolute left-3 top-2 text-sm text-gray-400 bg-secondary px-1
           transition-all
           peer-placeholder-shown:top-2.5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-gray-500
           peer-focus:-top-2
           peer-focus:text-sm
           peer-focus:text-blue-500">
    Pin code*
  </label>
</div>
        <div class="relative mb-4">
  <input
    type="text"
    id="house"
    name="house"
    required
    placeholder=" "
    class="peer w-1/3 px-3 py-2 bg-secondary border border-custom rounded-lg text-primary
           focus:outline-none focus:ring-0 focus:border-blue-500"
  />

  <label
    for="house"
    class="absolute left-3 top-2  text-gray-400 bg-secondary px-1
           transition-all
           peer-placeholder-shown:top-2.5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-gray-500
           peer-focus:-top-2
           peer-focus:text-sm
           peer-focus:text-blue-500">
    House Number/Tower/Block*
  </label>
</div>
 <div class="relative mb-4">
  <input
    type="text"
    id="street"
    name="street"
    required
    placeholder=" "
    class="peer w-1/3 px-3 py-2 bg-secondary border border-custom rounded-lg text-primary
           focus:outline-none focus:ring-0 focus:border-blue-500"
  />

  <label
    for="street"
    class="absolute left-3 top-2 text-s text-gray-400 bg-secondary px-1
           transition-all
           peer-placeholder-shown:top-2.5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-gray-500
           peer-focus:-top-2
           peer-focus:text-sm
           peer-focus:text-blue-500">
    Address(locality,building,street)*
  </label>
</div> 
        <div class="mb-3 ">
             <h2 >Address Type</h2>
             <p class="gap-6" >
            Home<input type="radio" name="addtype" id="home">
            Office<input type="radio" name="addtype" id="office">
        </p>
        </div>
        <div class="text-x mb-1">
            <input type="checkbox">Make this as My Default Address
        </div>

        </div>
        <input
          class="px-5 rounded-full py-3 mt-2 accent-bg text-white accent-hover"
          type="submit"
          value="Create My Address"
        />
      </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>

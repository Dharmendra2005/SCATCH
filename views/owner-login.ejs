<%- include('./partials/header') %>
<div class="w-full min-h-screen flex items-center justify-center px-20">
    <div class="3/4 flex items-center justify-center gap-5">
        <div class="w-full px-20">
            <h4 class="text-3xl capitalize mb-5">Admin Access</h4>
            <form class action="/create" method="post">
                <input
                    class="block bg-zinc-100 w-full px-2 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-black"
                    type="username" placeholder="Username" name="username"
                    required>
                <input
                    class="block bg-zinc-100 w-full px-2 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-black"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-black"
                    type="password" placeholder="Password" name="password"
                    required>
                <input
                    class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white"
                    type="submit" value="Login">
            </form>
        </div>
        <div class="w-1/2 ">
            <img
                src="/images/manager.png"
                alt="Manager"
                class="w-490 h-80 " />
        </div>
    </div>
</div>
<%- include('./partials/footer') %>

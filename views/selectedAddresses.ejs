<h2>Select Delivery Address</h2>

<% if (addresses.length > 0) { %>
  <% addresses.forEach(address => { %>
    <div class="border rounded-lg p-4 mb-4">

      <div class="flex items-center gap-2">
        <input type="radio" name="selectedAddress" checked />
        <strong><%= address.name %></strong>

        <span class="text-xs bg-green-100 text-green-700 px-2 rounded">
          <%= address.addressType.toUpperCase() %>
        </span>
      </div>

      <p class="mt-2">
        <%= address.House_no %>, <%= address.Address %>
      </p>

      <p>
        Pin: <%= address.PinCode %>
      </p>

      <p>
        Mobile: <%= address.Mobile_no %>
      </p>

      <div class="mt-3 flex gap-3">
        <button class="border px-4 py-1 rounded">REMOVE</button>
        <button class="border px-4 py-1 rounded">EDIT</button>
      </div>

    </div>
  <% }) %>
<% } %>
